{
    "manifest_version": 2,
    "name": "Legible (cmmtr)",
    "version": "1.0",
    "description": "Making cmmtr comments legible.",
    "icons": {
        "48": "icons/icon.png",
        "96": "icons/icon@2x.png"
    },
    "content_scripts": [{
        "all_frames": true,
        "matches": ["*://*.cmmtr.com/*"],
        "run_at": "document_start",
        "js": ["background.js"]
    }],
    "web_accessible_resources": [
        "background.css"
    ]
}
