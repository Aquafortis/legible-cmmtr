{
    "manifest_version": 2,
    "name": "Legible (cmmtr)",
    "version": "1.3",
    "description": "Making cmmtr comments legible.",
    "icons": {
        "48": "icons/icon.png",
        "96": "icons/icon@2x.png"
    },
    "content_scripts": [{
        "all_frames": true,
        "matches": ["*://*.cmmtr.com/*"],
        "run_at": "document_start",
        "css": ["readcmmtr.css"]
    }],
    "applications": {
        "gecko": {
            "id": "legible-cmmtr@aquafortis"
        }
    }
}
